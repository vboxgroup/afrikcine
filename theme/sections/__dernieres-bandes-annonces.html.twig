{% set data = getData('dernieres-bandes-annonces', 5) %}

{% if data.count > 0 %}
    <div class="dernieres-bandes-annonces {{cls??''}}">
        <div class="mb-10">
            {{ p('sec-header', {title:'Derni√®res bandes annonces', cls:'mt-0 linear-g-title'}) }}
        </div>

        <div class="movie--play-lg-1-line-wrapper">
            {% for item in data.items|slice(0, 1) %}
                {{ c('movie--play-lg-1-line', {item:item}) }}
