{% set href = href ?? getCurrentUrlParamsLess() %}
{% set text = text ?? getPost().title %}

<div class="share">
    <a class="no-ajaxify whatsapp active--pulse" href="whatsapp://send?text={{href}}" data-action="share/whatsapp/share" target="_blank">{{i('fa-brands:whatsapp')}}</a>
    <a class="no-ajaxify facebook active--pulse" href="http://www.facebook.com/sharer.php?u={{href}}" target="_blank">{{i('bx:bxl-facebook')}}</a>
    <a class="no-ajaxify twitter active--pulse" href="http://www.twitter.com/share?url={{href}}&amp;text={{text}}" target="_blank">{{i('ant-design:twitter-outlined')}}</a>
</div>